# ============================================
# CONFIGURACIÓN DE BASE DE DATOS (MySQL Local - XAMPP)
# ============================================
# Formato: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# Usuario root sin contraseña en XAMPP por defecto
DATABASE_URL="mysql://root:@localhost:3306/incidencias"

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# JWT (JSON Web Tokens) - Autenticación
# ============================================
# IMPORTANTE: Cambiar esto en producción por un secreto fuerte y único
JWT_SECRET=supersecreto_local_development_change_in_production
JWT_EXPIRES_IN=7d

# ============================================
# FRONTEND URL (para CORS)
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# CONFIGURACIÓN DE ARCHIVOS ADJUNTOS
# ============================================
# Directorio donde se almacenarán los archivos subidos
UPLOAD_DIR=./uploads
# Tamaño máximo de archivo en bytes (10MB por defecto)
MAX_FILE_SIZE=10485760

# ============================================
# RATE LIMITING (opcional)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
